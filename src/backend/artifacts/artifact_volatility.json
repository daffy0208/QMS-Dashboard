  "volatility_classes": {
    "draft_friendly": {
      "modifier": -0.1,
      "description": "Cheap to iterate; early generation helps identify gaps",
      "artifacts": [
        "Verification Plan",
        "Validation Plan",
        "Assumptions Register"
      ]
    },
    "foundation": {
      "modifier": 0.0,
      "description": "Critical stability; downstream artifacts depend heavily",
      "artifacts": [
        "Risk Register",
        "CTQ Tree",
        "Quality Plan"
      ]
    },
    "rework_costly": {
      "modifier": 0.1,
      "description": "Expensive to rebuild if upstream changes; wait for stable prerequisites",
      "artifacts": [
        "Traceability Index",
        "Control Plan"
      ]
    },
    "lightweight": {
      "modifier": -0.05,
      "description": "Simple artifacts with low rework cost",
      "artifacts": [
        "Measurement Plan",
        "Change Log",
        "CAPA Log"
      ]
    }
  },
  "artifact_lookup": {
    "Quality Plan": "foundation",
